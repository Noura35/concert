@model Concert

<h2>Edit Concert</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Artist</label>
        <input asp-for="Artist" />
    </div>
    <div>
        <label>Date</label>
        <input asp-for="Date" type="date" />
    </div>
    <div>
        <label>Venue</label>
        <input asp-for="Venue" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">Update</button>
</form>
